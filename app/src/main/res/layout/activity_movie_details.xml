<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_match">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/match_wrap">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            style="@style/match_match"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Collapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@style/HeaderTitleStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="MAD MAX"
            app:titleTextColor="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/collapsing_toolbar_height"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <ImageView
                    android:id="@+id/movie_image_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/collapsing_toolbar_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beach_scene" />

                <ImageView
                    android:layout_width="@dimen/video_play_circle_width"
                    android:layout_height="@dimen/video_play_circle_width"
                    android:layout_centerInParent="true"
                    android:background="@drawable/video_play_circle"
                    android:scaleType="centerInside"
                    android:src="@drawable/video_play" />

            </RelativeLayout>


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:title="@string/app_name"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@android:color/white">

            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        style="@style/match_match"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            style="@style/match_wrap"
            android:padding="@dimen/dimen_10">

            <ImageView
                android:id="@+id/movie_image"
                style="@style/wrap_wrap"
                android:scaleType="fitCenter"
                android:transitionName="@string/transition_string" />

            <TextView
                android:id="@+id/movie_released_date"
                style="@style/match_wrap"
                android:layout_toRightOf="@+id/movie_image"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingLeft="@dimen/dimen_10"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/textsize_18" />

            <TextView
                android:id="@+id/movie_vote_avg"
                style="@style/match_wrap"
                android:layout_below="@+id/movie_released_date"
                android:layout_toRightOf="@+id/movie_image"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingLeft="@dimen/dimen_10"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/textsize_18" />

            <TextView
                android:id="@+id/movie_overview"
                style="@style/match_wrap"
                android:layout_below="@+id/movie_image"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingBottom="@dimen/dimen_10"
                android:paddingTop="@dimen/dimen_10"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/textsize_16" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
